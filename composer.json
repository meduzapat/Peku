{
	"name" : "peku/framework",
	"description" : "Lightweight, security-oriented PHP framework built for performance",
	"type" : "library",
	"keywords" : [
		"framework",
		"php",
		"lightweight",
		"performance",
		"security",
		"oop"
	],
	"homepage" : "https://github.com/meduzapat/peku",
	"license" : "MIT",
	"authors" : [{
			"name" : "Patricio Rossi",
			"email" : "meduzapat@netscape.net",
			"role" : "Developer"
		}
	],
	"require" : {
		"php" : ">=8.3"
	},
	"require-dev" : {
		"phpunit/phpunit" : "^10.0",
		"phpstan/phpstan" : "^1.10",
		"squizlabs/php_codesniffer" : "^3.7",
		"php-mock/php-mock-phpunit" : "^2.9"
	},
	"autoload" : {
		"psr-4" : {
			"Peku\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Peku\\Tests\\" : "tests/"
		}
	},
	"scripts" : {
		"test" : "phpunit",
		"test:unit" : "phpunit --testsuite=Unit",
		"test:integration" : "phpunit --testsuite=Integration",
		"test:coverage" : "XDEBUG_MODE=coverage phpunit --coverage-html build/coverage --coverage-text --coverage-clover build/coverage/clover.xml",
		"lint" : "phpcs src/",
		"analyse" : "phpstan analyse src/ --level=8"
	},
	"config" : {
		"optimize-autoloader" : true,
		"sort-packages" : true,
		"preferred-install" : "dist"
	},
	"minimum-stability" : "dev",
	"prefer-stable" : true
}
